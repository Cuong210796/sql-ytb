        <section>
            <div class="main-content">
                <div class="section-offer">
                    <div class="container">
                        <form action="/new-todo" method="POST">
                            <input type="text" name="link">
                            <input type="text" name="img">
                            <input type="text" name="title">
                            <input type="text" name="channel">
                            <input type="text" name="view">
                            <button type=" submit ">Thêm Video</button>
                        </form>

                        <form action="/delete-todo" method="POST">
                            <input type="text" name="id">
                            <button type="submit">Xóa Video</button>
                        </form>

                        <form action="/fix-todo" method="POST">
                            <input type="number" name="id">
                            <input type="text" name="link">
                            <input type="text" name="newlink">
                            <input type="text" name="img">
                            <input type="text" name="newimg">
                            <input type="text" name="title">
                            <input type="text" name="newtitle">
                            <input type="text" name="channel">
                            <input type="text" name="newchannel">
                            <input type="text" name="view">
                            <input type="text" name="newview">
                            <button type="submit">Fix</button>
                        </form>
                        <h1>Đề xuất</h1>
                        <div class="row Range">

                            <div class="row">
                                <% for(let i = 0; i < result.length; i++){ %>
                                    <div class="col-md-3 ">
                                        <iframe width="560 " height="315 " src="<%= result[i].link %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                        <div class="content">
                                            <div class="icon-avatar">
                                                <img src="<%= result[i].img %>" alt="avatar">
                                            </div>
                                            <div class="text">
                                                <h2>
                                                    <%= result[i].title %>
                                                </h2>
                                                <span class="verified"><%= result[i].channel %></span><br>
                                                <span><%= result[i].view %></span>
                                            </div>
                                        </div>
                                    </div>

                                    <% } %>

                            </div>
                        </div>


